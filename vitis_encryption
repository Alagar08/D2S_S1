#include "xparameters.h"
#include "xgpio.h"
#include "xil_printf.h"
#include "sleep.h"

#define GPIO_DEVICE_ID XPAR_AXI_GPIO_0_DEVICE_ID

XGpio Gpio;

int main()
{
    u8 encrypted;

    XGpio_Initialize(&Gpio, GPIO_DEVICE_ID);

    XGpio_SetDataDirection(&Gpio, 1, 0xFF);

    xil_printf("\r\nEncrypted Ultrasonic Output\r\n");

    while(1)
    {
        encrypted = XGpio_DiscreteRead(&Gpio, 1);

        xil_printf("Encrypted Value: 0x%02X\r\n", encrypted);

        sleep(1);
    }

    return 0;
}
